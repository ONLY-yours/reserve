<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.reserve.FinalPayActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#5799E3"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_navigate_back"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="无与伦比酒店"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_marginTop="47dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/circle_white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="18dp"
                android:text="高级房"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@id/view1"
                app:layout_constraintTop_toTopOf="@id/view1"/>

            <TextView
                android:id="@+id/tv_homedetial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="34dp"
                android:text="房间详情"
                android:textColor="#3D70EC"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="@id/view1"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"/>

            <TextView
                android:id="@+id/tv_stay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:layout_marginTop="13dp"
                android:text="3月13日（今天）--  3月14日（明天）共一晚"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintLeft_toLeftOf="@id/tv_name"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_decribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:layout_marginTop="35dp"
                android:text="单人床 无早餐 限时取消"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintLeft_toLeftOf="@id/tv_name"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#357BF7"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="17dp"
                android:text="3月13日 18点前可免费取消，别再犹豫了！"
                app:layout_constraintBottom_toBottomOf="@id/view1"
                app:layout_constraintLeft_toLeftOf="@id/tv_name"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="#9F9191"
                android:layout_marginLeft="17dp"
                android:text="无需等待！此订单可立即确认"
                app:layout_constraintBottom_toBottomOf="@id/view1"
                app:layout_constraintLeft_toLeftOf="@id/tv_name"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/ic_navigate_next"
                app:layout_constraintLeft_toRightOf="@id/tv_homedetial"
                app:layout_constraintTop_toTopOf="@id/tv_homedetial"
                app:layout_constraintBottom_toBottomOf="@id/tv_homedetial"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_blue"
                app:layout_constraintLeft_toLeftOf="@id/tv_name"
                app:layout_constraintTop_toTopOf="@id/tv1"
                app:layout_constraintBottom_toBottomOf="@id/tv1"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_gray"
                app:layout_constraintLeft_toLeftOf="@id/tv_name"
                app:layout_constraintTop_toTopOf="@id/tv2"
                app:layout_constraintBottom_toBottomOf="@id/tv2"/>

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="209dp"
                android:background="@drawable/circle_white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintRight_toRightOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/view2"
                android:layout_marginTop="64dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textSize="18dp"
                android:textColor="@color/colorText"
                android:text="房间数"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/view2"
                app:layout_constraintBottom_toBottomOf="@id/line1"/>

            <EditText
                android:id="@+id/et_mostPeopleNumber"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="14sp"
                android:lines="1"
                android:background="@color/colorWhite"
                android:hint="每间最多可入住2人"
                android:layout_marginLeft="144dp"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/view2"
                app:layout_constraintBottom_toBottomOf="@id/line1"/>

            <View
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintRight_toRightOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/view2"
                android:layout_marginTop="134dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textSize="18dp"
                android:textColor="@color/colorText"
                android:text="入住人"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/line1"
                app:layout_constraintBottom_toBottomOf="@id/line2"/>

            <EditText
                android:id="@+id/et_people"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="14sp"
                android:lines="1"
                android:background="@color/colorWhite"
                android:hint="请点击右边选择用户"
                android:layout_marginLeft="144dp"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/line1"
                app:layout_constraintBottom_toBottomOf="@id/line2"/>

            <Button
                android:id="@+id/btn_custom_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_add_custom"
                app:layout_constraintRight_toRightOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/line1"
                app:layout_constraintBottom_toBottomOf="@id/line2"/>


            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="139dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/circle_white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toBottomOf="@id/view2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textSize="18dp"
                android:textColor="@color/colorText"
                android:text="发票"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/view3"
                app:layout_constraintBottom_toBottomOf="@id/line3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如需发票，可向酒店索取"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:layout_marginTop="22dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="144dp"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/view3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酒店可提供普票"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="144dp"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintBottom_toBottomOf="@id/line3"/>
            <View
                android:id="@+id/line3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                app:layout_constraintLeft_toLeftOf="@id/view3"
                app:layout_constraintRight_toRightOf="@id/view3"
                app:layout_constraintTop_toTopOf="@id/view3"
                android:layout_marginTop="74dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textSize="18dp"
                android:textColor="@color/colorText"
                android:text="特别要求"
                app:layout_constraintLeft_toLeftOf="@id/view3"
                app:layout_constraintTop_toTopOf="@id/line3"
                app:layout_constraintBottom_toBottomOf="@id/view3"/>

            <EditText
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="14sp"
                android:lines="1"
                android:background="@color/colorWhite"
                android:hint="无"
                android:layout_marginLeft="144dp"
                app:layout_constraintLeft_toLeftOf="@id/view3"
                app:layout_constraintTop_toTopOf="@id/line3"
                app:layout_constraintBottom_toBottomOf="@id/view3"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textSize="18dp"
                android:textColor="@color/colorText"
                android:text="联系电话"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/line2"
                app:layout_constraintBottom_toBottomOf="@id/view2"/>

            <EditText
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="14sp"
                android:lines="1"
                android:background="@color/colorWhite"
                android:hint="单行输入"
                android:layout_marginLeft="144dp"
                app:layout_constraintLeft_toLeftOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/line2"
                app:layout_constraintBottom_toBottomOf="@id/view2"/>



            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="52dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/circle_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/view4"
                app:layout_constraintTop_toTopOf="@id/view4"
                app:layout_constraintBottom_toBottomOf="@id/view4"
                android:textSize="18sp"
                android:text="￥198"
                android:layout_marginLeft="22dp"
                android:textColor="#F7730A"/>
            <Button
                android:id="@+id/btn_pay"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="提交订单"
                app:layout_constraintRight_toRightOf="@id/view4"
                app:layout_constraintTop_toTopOf="@id/view4"
                app:layout_constraintBottom_toBottomOf="@id/view4"
                android:textColor="#ffffff"
                android:background="@drawable/circle_red"
                android:layout_marginRight="29dp"
                android:layout_gravity="right"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>