<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    android:background="@drawable/circle_white"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_detial"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="89dp"
        android:layout_height="82dp"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/iv_bed1"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvdescribe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高级房"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_img"
        app:layout_constraintLeft_toRightOf="@id/iv_img"
        android:textSize="18sp"
        android:textColor="#101010"/>

    <TextView
        android:id="@+id/tvdescribe2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2米/2.4米大床：无烟"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="@id/iv_img"
        app:layout_constraintLeft_toRightOf="@id/iv_img"
        android:textSize="12sp"
        android:textColor="#ACACAC"/>

    <TextView
        android:id="@+id/tvdescribe3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定制床垫"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/iv_img"
        app:layout_constraintLeft_toRightOf="@id/iv_img"
        android:textSize="10sp"
        android:textColor="#EA9C08"/>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="104dp"
        android:layout_height="30dp"
        android:text="预定·在线付"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:background="@drawable/circle_red"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
        android:id="@+id/iv1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_check_orange"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@id/btn_pay"
        app:layout_constraintRight_toRightOf="@id/btn_pay"/>


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/btn_pay"
            android:textSize="16sp"
            android:textColor="#F7730A"
            android:text="¥ 799"
            app:layout_constraintRight_toRightOf="@id/btn_pay"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_price"
            android:textSize="10sp"
            android:textColor="#ACACAC"
            android:text="起"
            app:layout_constraintRight_toRightOf="@id/btn_pay"/>

</androidx.constraintlayout.widget.ConstraintLayout>