<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="fitXY"
                android:src="@mipmap/background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="12dp"
                >
                <TextView
                    android:id="@+id/tv_homepage"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#101010"
                    android:text="首页" />
                <TextView
                    android:id="@+id/tv_reserve"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#101010"
                    android:text="预定" />
                <TextView
                    android:id="@+id/tv_trip"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#101010"
                    android:text="行程" />
                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#101010"
                    android:text="服务" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#101010"
                android:textSize="20sp"
                android:text="您好，\n欢迎来到\n伦比未来酒店"
                app:layout_constraintLeft_toLeftOf="@id/iv_back"
                app:layout_constraintTop_toTopOf="@id/iv_back"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="65dp"/>

            <LinearLayout
                android:id="@+id/ll_place"
                android:layout_width="0dp"
                android:layout_height="58dp"
                app:layout_constraintTop_toBottomOf="@id/iv_back"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_location"
                    android:layout_height="28dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_marginTop="19dp"
                    android:textColor="#8C8888"
                    android:text="杭州市西湖区留下路318号未来区8号楼"
                    android:textSize="14sp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/ll_place"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ll_place"
                app:layout_constraintLeft_toRightOf="@id/ll_place"
                android:gravity="right">

                <View
                    android:layout_width="1dp"
                    android:layout_height="28dp"
                    android:background="#919191"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="11dp"/>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="35dp"
                    android:src="@drawable/ic_phone"
                    android:layout_height="32dp"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#919191"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_place"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#919191"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_facekey"/>

            <View
                android:layout_width="1dp"
                android:layout_height="152dp"
                android:background="#919191"
                app:layout_constraintTop_toBottomOf="@id/ll_place"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="152dp"
                android:background="#919191"
                app:layout_constraintTop_toBottomOf="@id/ll_place"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="152dp"
                android:background="#919191"
                app:layout_constraintTop_toBottomOf="@id/ll_place"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/view_vip"
                android:layout_width="0dp"
                android:layout_height="152dp"
                app:layout_constraintTop_toBottomOf="@id/ll_place"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/view_facekey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员中心"
                android:textColor="#101010"
                android:textSize="16sp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="@id/view_vip"
                app:layout_constraintTop_toTopOf="@id/view_vip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心管理"
                android:textColor="#8C8B8B"
                android:textSize="12sp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="37dp"
                app:layout_constraintLeft_toLeftOf="@id/view_vip"
                app:layout_constraintTop_toTopOf="@id/view_vip"/>

            <ImageView
                android:layout_width="110dp"
                android:layout_height="88dp"
                android:layout_marginRight="11dp"
                android:src="@mipmap/iv_vip"
                app:layout_constraintRight_toRightOf="@id/view_vip"
                app:layout_constraintBottom_toBottomOf="@id/view_vip"/>
            
            <View
                android:id="@+id/view_facekey"
                android:layout_width="0dp"
                android:layout_height="152dp"
                app:layout_constraintTop_toBottomOf="@id/ll_place"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/view_vip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="FaceKey"
                android:textColor="#101010"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="@id/view_facekey"
                app:layout_constraintTop_toTopOf="@id/view_facekey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省去房卡刷脸入住"
                android:textColor="#8C8B8B"
                android:textSize="12sp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="37dp"
                app:layout_constraintLeft_toLeftOf="@id/view_facekey"
                app:layout_constraintTop_toTopOf="@id/view_facekey"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/iv_facekey"
                android:layout_marginRight="14dp"
                app:layout_constraintRight_toRightOf="@id/view_facekey"
                app:layout_constraintBottom_toBottomOf="@id/view_facekey"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>