<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.reserve.RoomDetialActivity">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorText"
        android:layout_marginLeft="16dp"
        android:text="高级房"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="0dp"
        android:layout_marginTop="14dp"
        android:src="@mipmap/iv_bed1"
        android:scaleType="fitXY"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintBottom_toTopOf="@id/ll1"/>

    <LinearLayout
        android:id="@+id/ll1"
        app:layout_constraintVertical_weight="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <ImageView
                 android:id="@+id/iv1"
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:layout_marginTop="24dp"
                 android:src="@drawable/ic_msqure"
                 android:layout_marginLeft="21dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 />

             <ImageView
                 android:id="@+id/iv2"
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:layout_marginTop="20dp"
                 android:src="@drawable/ic_floor"
                 android:layout_marginLeft="21dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/iv1"
                 />
             <ImageView
                 android:id="@+id/iv3"
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:layout_marginTop="20dp"
                 android:src="@drawable/ic_wifi"
                 android:layout_marginLeft="21dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/iv2"
                 />

             <ImageView
                 android:id="@+id/iv4"
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:layout_marginTop="24dp"
                 android:src="@drawable/ic_people_number"
                 android:layout_marginLeft="21dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 />

             <ImageView
                 android:id="@+id/iv5"
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:layout_marginTop="20dp"
                 android:src="@drawable/ic_breakfest"
                 android:layout_marginLeft="21dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toBottomOf="@id/iv4"
                 app:layout_constraintRight_toRightOf="parent"
                 />
             <ImageView
                 android:id="@+id/iv6"
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:layout_marginTop="20dp"
                 android:src="@drawable/ic_double_bed"
                 android:layout_marginLeft="21dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv5"
                 app:layout_constraintRight_toRightOf="parent"
                 />
             <TextView
                 android:id="@+id/tv_area"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="30.0m²"
                 android:textColor="@color/colorText"
                 android:layout_marginLeft="7dp"
                 app:layout_constraintTop_toTopOf="@id/iv1"
                 app:layout_constraintLeft_toRightOf="@id/iv1"
                 app:layout_constraintBottom_toBottomOf="@id/iv1"/>

             <TextView
                 android:id="@+id/tv_floor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="5"
                 android:textColor="@color/colorText"
                 android:layout_marginLeft="7dp"
                 app:layout_constraintTop_toTopOf="@id/iv2"
                 app:layout_constraintLeft_toRightOf="@id/iv2"
                 app:layout_constraintBottom_toBottomOf="@id/iv2"/>

             <TextView
                 android:id="@+id/tv_wifi"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="免费WiFi"
                 android:textColor="@color/colorText"
                 android:layout_marginLeft="7dp"
                 app:layout_constraintTop_toTopOf="@id/iv3"
                 app:layout_constraintLeft_toRightOf="@id/iv3"
                 app:layout_constraintBottom_toBottomOf="@id/iv3"/>

             <TextView
                 android:id="@+id/tv_people_number"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="5人间"
                 android:textColor="@color/colorText"
                 android:layout_marginLeft="7dp"
                 app:layout_constraintTop_toTopOf="@id/iv4"
                 app:layout_constraintLeft_toRightOf="@id/iv4"
                 app:layout_constraintBottom_toBottomOf="@id/iv4"/>

             <TextView
                 android:id="@+id/tv_breakfest"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="无早餐"
                 android:textColor="@color/colorText"
                 android:layout_marginLeft="7dp"
                 app:layout_constraintTop_toTopOf="@id/iv5"
                 app:layout_constraintLeft_toRightOf="@id/iv5"
                 app:layout_constraintBottom_toBottomOf="@id/iv5"/>

             <TextView
                 android:id="@+id/tv_bedsize"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="无早餐"
                 android:textColor="@color/colorText"
                 android:layout_marginLeft="7dp"
                 app:layout_constraintTop_toTopOf="@id/iv6"
                 app:layout_constraintLeft_toRightOf="@id/iv6"
                 app:layout_constraintBottom_toBottomOf="@id/iv6"/>
             <View
                 android:id="@+id/line"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 app:layout_constraintTop_toBottomOf="@id/iv6"
                 android:layout_marginTop="20dp"
                 android:background="#BBBBBB"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toBottomOf="@id/line"
                 app:layout_constraintLeft_toLeftOf="@id/iv1"
                 android:layout_marginTop="12dp"
                 android:textColor="#101010"
                 android:textSize="18sp"
                 android:text="酒店政策"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toBottomOf="@id/line"
                 app:layout_constraintLeft_toLeftOf="@id/iv1"
                 android:layout_marginTop="45dp"
                 android:textColor="#A6A5A5"
                 android:textSize="14sp"
                 android:text="无特别提示"/>

         </androidx.constraintlayout.widget.ConstraintLayout>
            
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#BBBBBB"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18sp"
                android:text="￥198"
                android:layout_marginLeft="22dp"
                android:textColor="#F7730A"/>
            <Button
                android:id="@+id/btn_pay"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="立即预定"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="#ffffff"
                android:background="@drawable/circle_red"
                android:layout_marginRight="29dp"
                android:layout_gravity="right"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#BBBBBB"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>